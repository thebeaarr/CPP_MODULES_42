CXX=c++
moahmedCXXFLAGS= -Wall -Werror -Wextra -std=c++98
moahmed
moahmedSRC= main.cpp
moahmed
moahmedOBJ=$(SRC:.cpp=.o)
moahmed
moahmedNAME=mfile
moahmed
moahmedall:$(NAME)
moahmed
moahmed$(NAME): $(OBJ)
moahmed	$(CXX) $(CXXFLAGS) $(OBJ) -o $(NAME)
moahmed
moahmed
moahmed%.o:%.cpp
moahmed	$(CXX) $(CXXFLAGS) -c $< -o $@
moahmed
moahmedclean:
moahmed	rm -rf $(OBJ)
moahmed
moahmedfclean: clean
moahmed	rm -rf $(NAME)
moahmed
moahmedre: fclean all
moahmed